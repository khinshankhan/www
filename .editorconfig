# https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 100

[{.gitmodules}]
indent_style = tab
indent_size = 4

[*.{ts,tsx,js,jsx,json}]
indent_style = space
indent_size = 2

[*.md]
indent_size = 4
trim_trailing_whitespace = false

eclint_indent_style = unset
